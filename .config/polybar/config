; IDK
background-alt = #021b21
; Text
foreground = ${xrdb:foreground}
; IDK
foreground-alt = #55
; Selected Desktop
primary = ${xrdb:color1} 
; IDK
secondary = ${xrdb:color5} 
; IDK
alert = ${xrdb:color15} 

